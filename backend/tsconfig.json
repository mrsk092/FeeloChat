{
  "compilerOptions": {
    "target": "es2016", 
    "moduleResolution": "nodenext",
    "module": "NodeNext", 
    "rootDir": "./src", 
    "typeRoots": ["./node_modules/@types", "./types"], 
    "outDir": "./dist", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",  
    "types/**/*" 
  ]
}
